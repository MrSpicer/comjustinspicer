@*
    Hero with Columns Layout
    ┌─────────────────────────┐
    │      Hero Section       │
    ├────────┬────────┬────────┤
    │ Col1(4)│ Col2(4)│ Col3(4)│
    └────────┴────────┴────────┘
    
    Use case: Marketing pages, home pages, product pages
    Mobile: Hero stays full-width, columns stack
*@

<section class="section">
    <div class="container">
        @await Component.InvokeAsync("ContentZone", new { zoneName = "Hero" })
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-4">
                @await Component.InvokeAsync("ContentZone", new { zoneName = "Column1" })
            </div>
            <div class="column is-4">
                @await Component.InvokeAsync("ContentZone", new { zoneName = "Column2" })
            </div>
            <div class="column is-4">
                @await Component.InvokeAsync("ContentZone", new { zoneName = "Column3" })
            </div>
        </div>
    </div>
</section>
