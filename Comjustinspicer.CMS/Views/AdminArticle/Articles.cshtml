@using Comjustinspicer.CMS.Models.Article
@model ArticleListViewModel

@{
    ViewData["Title"] = Model.ArticleListTitle + " - Articles";
}

<section class="section">
    <div class="container">
        <nav class="breadcrumb" aria-label="breadcrumbs">
            <ul>
                <li><a asp-controller="AdminContent" asp-action="Index" asp-route-contentType="articles">Article Lists</a></li>
                <li class="is-active"><a>@Model.ArticleListTitle</a></li>
            </ul>
        </nav>

        <h1 class="title">@Model.ArticleListTitle</h1>
        <h2 class="subtitle">Articles</h2>

        <a asp-controller="AdminContent" asp-action="ChildCreate" asp-route-contentType="articles" asp-route-parentKey="@Model.ArticleListSlug" asp-route-childType="articles" class="button is-primary">New +</a>

        <table class="table is-fullwidth is-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Created</th>
                    <th>Modified</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model.Articles)
                {
                    <tr>
                        <td>@article.Title</td>
                        <td>@article.Slug</td>
                        <td>@article.CreationDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@article.ModificationDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a asp-controller="AdminContent" asp-action="ChildEdit" asp-route-contentType="articles" asp-route-parentKey="@Model.ArticleListSlug" asp-route-childType="articles" asp-route-id="@article.Id" class="button is-small">Edit</a>
                            <form asp-controller="AdminContent" asp-action="ChildDelete" asp-route-contentType="articles" asp-route-parentKey="@Model.ArticleListSlug" asp-route-childType="articles" asp-route-id="@article.Id" method="post" style="display:inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="button is-small is-danger" onclick="return confirm('Delete this article?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
