@using Comjustinspicer.CMS.Models.Article
@model ArticleListViewModel

@{
    ViewData["Title"] = Model.ArticleListTitle + " - Articles";
}

<section class="section">
    <div class="container">
        <nav class="breadcrumb" aria-label="breadcrumbs">
            <ul>
                <li><a asp-controller="AdminArticle" asp-action="Index">Article Lists</a></li>
                <li class="is-active"><a>@Model.ArticleListTitle</a></li>
            </ul>
        </nav>

        <h1 class="title">@Model.ArticleListTitle</h1>
        <h2 class="subtitle">Articles</h2>

        <a asp-controller="AdminArticle" asp-action="PostEdit" asp-route-listSlug="@Model.ArticleListSlug" class="button is-primary">New +</a>

        <table class="table is-fullwidth is-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Created</th>
                    <th>Modified</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model.Articles)
                {
                    <tr>
                        <td>@post.Title</td>
                        <td>@post.Slug</td>
                        <td>@post.CreationDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@post.ModificationDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a asp-controller="AdminArticle" asp-action="PostEdit" asp-route-listSlug="@Model.ArticleListSlug" asp-route-id="@post.Id" class="button is-small">Edit</a>
                            <form asp-controller="AdminArticle" asp-action="Delete" asp-route-listSlug="@Model.ArticleListSlug" asp-route-id="@post.Id" method="post" style="display:inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="button is-small is-danger" onclick="return confirm('Delete this article?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
