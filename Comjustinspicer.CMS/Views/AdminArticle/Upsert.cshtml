@model Comjustinspicer.CMS.Models.Article.ArticleUpsertViewModel

@{
    var isEdit = Model?.Id != null && Model.Id != Guid.Empty;
    ViewData["Title"] = isEdit ? "Edit Article" : "New Article";
    var slug = ViewData["ArticleListSlug"] as string ?? "";
    var listTitle = ViewData["ArticleListTitle"] as string ?? "Article List";
}

<section class="section">
    <div class="container">
        <nav class="breadcrumb" aria-label="breadcrumbs">
            <ul>
                <li><a asp-controller="AdminContent" asp-action="Index" asp-route-contentType="articles">Article Lists</a></li>
                <li><a asp-controller="AdminContent" asp-action="ChildIndex" asp-route-contentType="articles" asp-route-parentKey="@slug" asp-route-childType="articles">@listTitle</a></li>
                <li class="is-active"><a>@ViewData["Title"]</a></li>
            </ul>
        </nav>

        <h1 class="title">@ViewData["Title"]</h1>

        <form asp-action="ChildEdit" asp-controller="AdminContent" asp-route-contentType="articles" asp-route-parentKey="@slug" asp-route-childType="articles" method="post">
            @Html.ValidationSummary(false, "", new { @class = "notification is-danger" })
            <form-fields for="@Model" />

            <div class="field is-grouped">
                <div class="control">
                    <button type="submit" class="button is-primary">Save</button>
                </div>
                <div class="control">
                    <a asp-action="ChildIndex" asp-controller="AdminContent" asp-route-contentType="articles" asp-route-parentKey="@slug" asp-route-childType="articles" class="button is-light">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
