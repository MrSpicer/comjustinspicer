@using Comjustinspicer.CMS.Models.Article
@model ArticleListIndexViewModel

@{
    ViewData["Title"] = "Article Lists";
}

<section class="section">
    <div class="container">
        <h1 class="title">Article Lists</h1>

        <a asp-controller="AdminArticle" asp-action="ArticleListEdit" class="button is-primary">New +</a>

        <table class="table is-fullwidth is-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Articles</th>
                    <th>Created</th>
                    <th>Modified</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var list in Model.ArticleLists)
                {
                    <tr>
                        <td>@list.Title</td>
                        <td>@list.Slug</td>
                        <td>@list.ArticleCount</td>
                        <td>@list.CreationDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@list.ModificationDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a asp-controller="AdminArticle" asp-action="Articles" asp-route-listSlug="@list.Slug" class="button is-small is-info">Articles</a>
                            <a asp-controller="AdminArticle" asp-action="ArticleListEdit" asp-route-id="@list.Id" class="button is-small">Edit</a>
                            <form asp-controller="AdminArticle" asp-action="ArticleListDelete" asp-route-id="@list.Id" method="post" style="display:inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="button is-small is-danger" onclick="return confirm('Delete this article list and all its articles?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
