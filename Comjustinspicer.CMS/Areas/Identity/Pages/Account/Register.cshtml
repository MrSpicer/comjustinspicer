@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-one-third">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="title is-5">Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="has-text-danger" role="alert"></div>

                    <div class="field">
                        <label class="label" asp-for="Input.Email">Email</label>
                        <div class="control">
                            <input asp-for="Input.Email" class="input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        </div>
                        <p class="help is-danger"><span asp-validation-for="Input.Email"></span></p>
                    </div>

                    <div class="field">
                        <label class="label" asp-for="Input.Password">Password</label>
                        <div class="control">
                            <input asp-for="Input.Password" class="input" autocomplete="new-password" aria-required="true" placeholder="password" />
                        </div>
                        <p class="help is-danger"><span asp-validation-for="Input.Password"></span></p>
                    </div>

                    <div class="field">
                        <label class="label" asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <div class="control">
                            <input asp-for="Input.ConfirmPassword" class="input" autocomplete="new-password" aria-required="true" placeholder="password" />
                        </div>
                        <p class="help is-danger"><span asp-validation-for="Input.ConfirmPassword"></span></p>
                    </div>

                    <div class="field">
                        <div class="control">
                            <button id="registerSubmit" type="submit" class="button is-primary is-fullwidth">Register</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="column">
                <section>
                    <h3 class="title is-5">Use another service to register.</h3>
                    <hr />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                                    about setting up this ASP.NET application to support logging in via external services</a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="buttons">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="button is-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
