@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<section class="section">
    <div class="container">
        <h1 class="title">@ViewData["Title"]</h1>
        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="button is-text">Click here to Logout</button>
                </form>
            }
            else
            {
                <p class="content">You have successfully logged out of the application.</p>
            }
        }
    </div>
</section>
