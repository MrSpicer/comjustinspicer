@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<section class="section">
    <div class="container">
        <h3 class="title">Set your password</h3>
        <partial name="_StatusMessage" for="StatusMessage" />
        <p class="content">
            You do not have a local username/password for this site. Add a local
            account so you can log in without an external login.
        </p>

        <div class="columns">
            <div class="column is-half">
                <form id="set-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="has-text-danger" role="alert"></div>

                    <div class="field">
                        <label class="label" asp-for="Input.NewPassword"></label>
                        <div class="control">
                            <input asp-for="Input.NewPassword" class="input" autocomplete="new-password" placeholder="Please enter your new password." />
                        </div>
                        <p class="help is-danger"><span asp-validation-for="Input.NewPassword"></span></p>
                    </div>

                    <div class="field">
                        <label class="label" asp-for="Input.ConfirmPassword"></label>
                        <div class="control">
                            <input asp-for="Input.ConfirmPassword" class="input" autocomplete="new-password" placeholder="Please confirm your new password." />
                        </div>
                        <p class="help is-danger"><span asp-validation-for="Input.ConfirmPassword"></span></p>
                    </div>

                    <div class="field">
                        <div class="control">
                            <button type="submit" class="button is-primary is-fullwidth">Set password</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
