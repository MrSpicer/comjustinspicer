@{
	ViewData["Title"] = "Blog";
}
@using comjustinspicer.Models.Blog
@model comjustinspicer.Models.Blog.BlogViewModel

<section class="section">
	<div class="container">
		<div class="columns is-multiline">
			@foreach (var post in Model.Posts)
			{
				<div class="column is-full">
					<div class="card">
						<div class="card-content">
							<p class="title is-4">
								<a href="@Url.Action("Index", "BlogPost", new { id = post.Id })">@post.Title</a>
							</p>
							<p class="subtitle is-6">@post.PublicationDate.ToString("MMMM dd, yyyy")</p>
							<div class="content">
								@Html.Raw(post.Body)
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>
