@using Comjustinspicer.CMS.ViewComponents

@{
	var articleId = ViewData["ArticleId"] as Guid?;
	ViewData["Title"] = articleId.HasValue ? "Article" : "Articles";
}

<section class="section">
	<div class="container content">
		@if (articleId.HasValue)
		{
			<a href="/Article" class="button is-light mb-4">‚Üê Back to Articles</a>
			@await Component.InvokeAsync("Article", new { id = articleId.Value })
		}
		else
		{
			<h1 class="title">Articles</h1>
			@await Component.InvokeAsync("Article")
		}
	</div>
</section>