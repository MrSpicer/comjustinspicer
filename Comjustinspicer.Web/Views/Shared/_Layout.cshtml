@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@using Comjustinspicer.CMS.Services;
@using Comjustinspicer.CMS.ViewComponents
@inject UserService UserService

<!DOCTYPE html>
<html lang="en">

@{
	var isAuthor = UserService.IsUserAuthor;
}

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewData["Title"]</title>

	<link rel="dns-prefetch" href="https://cdn.jsdelivr.net/" />
	<link rel="dns-prefetch" href="https://images.pexels.com/" />

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

	@if (isAuthor)
	{
		<meta name="ckeditor-license-key" content="@Configuration["CKEditor:LicenseKey"]" />
		<script>
			window.__APP_CONFIG__ = Object.assign({}, window.__APP_CONFIG__, {
				ckEditorLicenseKey: "@Configuration["CKEditor:LicenseKey"]"
			});
		</script>

		<link rel="stylesheet" href="https://cdn.ckeditor.com/ckeditor5/46.1.1/ckeditor5.css" />
	}
</head>

<body>
	<div class="section hero is-fullheight">
		<header>
			<partial name="_Navbar" />
		</header>

		<main class="container">
			@RenderBody()
		</main>

		<footer class="footer mt-auto pb-0 mb-0" style="background-color: white;">
			<partial name="_Footer" />
		</footer>
	</div>

	@if (isAuthor)
	{
		<script src="https://cdn.ckeditor.com/ckeditor5/46.1.1/ckeditor5.umd.js"></script>
	}

	<script src="~/js/site.js" asp-append-version="true"></script>
	@if (isAuthor)
	{
	<script src="~/js/admin.js" asp-append-version="true"></script>
	}

	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>