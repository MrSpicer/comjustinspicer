@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-one-third">
                <section>
                    <form id="account" method="post">
                        <h2 class="title is-5">Use a local account to log in.</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="has-text-danger" role="alert"></div>

                        <div class="field">
                            <label class="label" asp-for="Input.Email">Email</label>
                            <div class="control">
                                <input asp-for="Input.Email" class="input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            </div>
                            <p class="help is-danger"><span asp-validation-for="Input.Email"></span></p>
                        </div>

                        <div class="field">
                            <label class="label" asp-for="Input.Password">Password</label>
                            <div class="control">
                                <input asp-for="Input.Password" class="input" autocomplete="current-password" aria-required="true" placeholder="password" />
                            </div>
                            <p class="help is-danger"><span asp-validation-for="Input.Password"></span></p>
                        </div>

                        <div class="field">
                            <div class="control">
                                <label class="checkbox">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <button id="login-submit" type="submit" class="button is-primary is-fullwidth">Log in</button>
                            </div>
                        </div>

                        <div class="field">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            <div class="column">
                <section>
                    <h3 class="title is-5">Use another service to log in.</h3>
                    <hr />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                                    about setting up this ASP.NET application to support logging in via external services</a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="buttons">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="button is-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
